.country_articles
  .show_detail
    - @articles.each do |article|
      .article-block
        .show-title
          = article.title
        .show-country
          = article.country.name
        .show-content
          = simple_format(article.text)
        .show-image
          - if article.images.present?
            .article_image
              - article.images.each do |image|
                = image_tag image.image.url

  .top-link
    = link_to 'トップに戻る', root_path